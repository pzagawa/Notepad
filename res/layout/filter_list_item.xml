<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llayFilterListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:weightSum="1"
    android:padding="4dp"
    android:orientation="horizontal" >

	<ImageView xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/imgFilterItemSelection"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight="0"
	    android:src="@drawable/filter_item_selector"
	    android:layout_marginRight="6dp"
	    android:orientation="vertical" />
    
   	<TextView android:id="@+id/textFilterItemName"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"    
	    android:textColor="#ff404040"
	    android:textStyle="normal"
	    android:textSize="16sp"
	    android:singleLine="true"
	    android:ellipsize="end"
	    android:text="Filter Item Name" />
	
   	<TextView android:id="@+id/textFilterItemValue"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight="0"	    
	    android:gravity="center_vertical"
	    android:textColor="#ff808080"
	    android:textStyle="normal"
	    android:textSize="16sp"
	    android:layout_marginRight="4dp"
	    android:singleLine="true"
	    android:background="@drawable/filter_item_value_bkg"
	    android:paddingLeft="6dp"
	    android:paddingRight="6dp"
	    android:text="123" />
				
</LinearLayout>
